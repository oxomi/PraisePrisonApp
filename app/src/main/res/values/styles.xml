<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarViewTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>


    <style name="CalendarDateText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="CalendarWeekText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- Material3 Custom Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent</item>
        <item name="hintTextColor">@color/accent</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/accent</item>
        <item name="android:textColor">@color/background</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- 공통 툴바 스타일 -->
    <style name="CustomToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/background</item>
        <item name="navigationIconTint">@color/textPrimary</item>
        <item name="titleTextAppearance">@style/CustomToolbarTitleStyle</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!-- 툴바 제목 텍스트 스타일 -->
    <style name="CustomToolbarTitleStyle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 툴바 저장 버튼 스타일 -->
    <style name="CustomToolbarSaveButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- 공통 제목 텍스트 스타일 -->
    <style name="CustomTitleTextStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 공통 내용 텍스트 스타일 -->
    <style name="CustomContentTextStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomContentTextStyleLight">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 공통 라벨 텍스트 스타일 -->
    <style name="CustomLabelTextStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources> 