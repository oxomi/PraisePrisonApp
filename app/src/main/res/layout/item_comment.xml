<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_content_white">

    <!-- Author Name and Delete Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Author Name -->
        <TextView
            android:id="@+id/tvCommentAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CustomContentTextStyle"
            android:textSize="14sp" />

        <!-- Delete Button (only visible for my comments) -->
        <ImageButton
            android:id="@+id/btnDeleteComment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="댓글 삭제"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Comment Content -->
    <TextView
        android:id="@+id/tvCommentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/CustomContentTextStyleLight"
        android:textSize="14sp" />

</LinearLayout> 